<%= render 'shared/navbar' %>
<%= render 'shared/banner' %>
<div class="container">
  <div class="d-flex justify-content-between align-items-center my-3">
    <h2>My Lists</h2>
    <%= link_to "Create a new list", new_list_path, class:"btn btn-dark" %>
  </div>
  <div class="cards-wagon">
      <% @lists.each do |list| %>
        <% image_url = cl_image_path list.photo.key, height: 300, crop: :fill %>
        <div class="card-category-wagon" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_url %>)">
          <%= link_to "#{list.name}", list_path(list.id) %>
        </div>
      <% end %>
  </div>
</div>
<%= render 'shared/footer' %>
