<%= render 'shared/navbar' %>
<%= render 'shared/banner' %>
<div class="container">
  <div class="d-flex justify-content-between align-items-center my-3">
    <h2>My Lists</h2>
    <%= link_to "Create a new list", new_list_path, class:"btn btn-dark" %>
  </div>
  <div class="cards-wagon">
      <% @lists.each do |list| %>
        <div class="card-category-wagon">
          <%= link_to "#{list.name}", list_path(list.id) %>
        </div>
      <% end %>
  </div>
</div>
<%= render 'shared/footer' %>
