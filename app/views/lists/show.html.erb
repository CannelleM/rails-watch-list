<%= render 'shared/navbar' %>
<%= render 'shared/list_banner', list: @list %>
<div class="container">
  <% movies = @list.movies %>
  <% bookmarks = @list.bookmarks %>
    <div class="row justify-content-around">
      <% bookmarks.each do |bookmark| %>
      <%= render "shared/movie_card", bookmark: bookmark %>
      <% end %>
    </div>
  <div class="row justify-content-center m-3 mt-5">
    <div class="col-12 col-lg-6">
    <h3 class="text-center">Create a new bookmark:</h3>
      <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment %>
          <%= f.association :movie %>
          <div class="dflex justify-content-center"><%= f.submit class:"btn btn-dark"%></div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
