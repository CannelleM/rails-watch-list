<div class="card mt-3" style="width: 18rem;">
<% image_url = bookmark.movie.poster_url %>
  <img src=<%= image_url %> class="card-img-top" alt="...">
  <div class="card-body d-flex flex-column">
    <h5 class="card-title fw-bold"><%= bookmark.movie.title %></h5>
    <p class="card-text"> <%= bookmark.movie.overview %> </p>
    <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-primary mt-auto"%>
  </div>
</div>
